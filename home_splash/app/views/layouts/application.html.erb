<!DOCTYPE html>
<html>
<head>
  <title>HomeSplash</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:500italic,400|Raleway' rel='stylesheet' type='text/css'>
</head>
<body>
  <div id="clearance_links">
    <% if signed_in? %>
      Hey there, <%= current_user.email %>
      <%= link_to (fa_icon "sign-out", text: "Sign Out?"), sign_out_path, method: :delete %>
    <% else %>
      <%= link_to (fa_icon "users", text: "Sign In"), sign_in_path %>
    <% end %>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
  </div>

  <%= yield %>

  <%= render 'shared/footer' %>

</body>
</html>
